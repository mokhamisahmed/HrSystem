   
@model List<HRSystem.Models.LeaveRegistration> 

<div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tables</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable. Check for <a href="https://fiduswriter.github.io/simple-datatables/demos/" target="_blank">more examples</a>.</p>

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                  
                    <th data-type="date" data-format="YYYY/DD/MM">Start Date</th>
                     <th data-type="date" data-format="YYYY/DD/MM">End Date</th>
                    <th>LeaveType</th>
                    <th>LeaveStatus</th>
                  </tr>
                </thead>
                <tbody>
                    @foreach(var register in Model){
                  <tr>
                    <td>@register.StartDate</td>
                    <td>@register.EndDate</td>
                     <td>@register.type.Type_name</td>
                     @if(@register.isAccept==0){
                           <td style="color:yellow">Waiting</td>
                     }else if(@register.isAccept==1){
                           <td style="color:green">Accepted</td>
                     }else{
                           <td style="color:red">refused</td>
                     }
                    
                  </tr>
                    }
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>